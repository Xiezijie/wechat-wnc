@import "/res/common.wxss";
@import "/res/ifont/iconfont.wxss";

/*顶部tab导航  */

.menu {
  padding: 0 50rpx;
  justify-content: space-between;
  background: #fff;
  margin-bottom: 20rpx;
}

.menu-list {
  width: 130rpx;
  padding: 20rpx 0;
  border-bottom: 6rpx solid transparent;
  box-sizing: border-box;
  position: relative;
  text-align: center;
}

.menu-list-on {
  font-weight: 700;
  color: #ff2741;
}

.menu-list-on::after {
  content: '';
  position: absolute;
  width: 130rpx;
  height: 4rpx;
  left: 0;
  bottom: -4rpx;
  font-weight: 700;
  border-bottom: 4rpx solid #ff2741;
  color: #ff2741;
}

/*礼包列表  */

.orderL{ background: #fff;border-bottom: 1rpx solid #d9e3ea; margin-bottom: 20rpx;}
.orderid{padding: 10rpx 30rpx; font-size: 24rpx; border-bottom: 1rpx solid #d9e3ea}

.list.flex_row {
  margin: 0 20rpx;  
  padding: 20rpx 10rpx;
  border-bottom: 1rpx solid #d9e3ea;
}

.list.flex_row:last-child{
   margin: 0;  
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #d9e3ea;
}
.list .orderimg {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
  overflow: hidden;
  border:1rpx solid #d7e2ea
}

.list image {
  width: 100%;
  height: 100%;
}

.list .flex_col {
  justify-content: space-between;
}

.list .flex_col .flex_row {
  align-items: center;
}

.list .flex_col .font_22 {
  padding: 2rpx 4rpx;
  background: #ff393f;
  border-radius: 3rpx;
  margin-right: 11rpx;
}

.list .flex_col .font_30_b.font_color3 {
  width: 470rpx;
  height: 88rpx;
  line-height: 45rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

.list .flex_col .font_color2 {
  width: 430rpx; height:36rpx;  white-space:nowrap;overflow:hidden;text-overflow:ellipsis; 
}

.list .flex_col .btndred {
  width: 145rpx;
  height: 54rpx;
  padding: 0;
  margin: 0;
  line-height: 54rpx;
  text-align: center;
}
.orderlb .flex_row{align-items: center }
.orderlb{padding:20rpx 50rpx 20rpx 30rpx; justify-content: space-between; }
.orderbtn{ width: 136rpx; height: 68rpx; line-height: 68rpx; border: 1rpx solid #ff2741; text-align:center; border-radius: 4rpx; }
.orderbtn.nobor{ border:0; color: #333 }
/** 无数据情况 **/

.nodata {
  padding: 150rpx 0;
  text-align: center;
}

.nodata .icon {
  font-size: 200rpx;
  display: block;
  padding-bottom: 20rpx;
  color: #ccd1dd;
}

.nodata-text {
  width: 515rpx;
  display: inline-block;
  margin: auto;
  text-align: center;
  font-weight: normal;
}
