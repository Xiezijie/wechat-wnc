@import "/res/common.wxss";
@import "/res/ifont/iconfont.wxss";


/*地址列表  */
.container{ margin-bottom:120rpx; }
.addressl{background: #fff }

.list.flex_row {
  margin: 0 30rpx;  
  padding: 20rpx 0;
  border-bottom: 1rpx solid #d9e3ea;
  align-items: center;
  justify-content: space-between
}

.list.flex_row:last-child{
   margin: 0;  
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #d9e3ea;

}

.list .flex_col {
  justify-content: space-between;
}

.list .flex_col .flex_row {
  align-items: center;
  margin:5rpx 0;

}

.list .flex_col .font_22 {
  padding: 2rpx 4rpx;
  background: #ff393f;
  border-radius: 3rpx;
  margin-right: 11rpx;
}

.list .flex_col .font_30_b {
line-height: 45rpx;
  margin: 10rpx 0;
  overflow: hidden;

}
.list .flex_col .select{
width: 80rpx; height: 40rpx; line-height: 40rpx; text-align: center; background: #45b761; font-size: 24rpx; border-radius: 4rpx; color:#fff; margin-left: 10rpx;
  
}


.list .flex_col .font_color2 {
  width: 430rpx; height:36rpx;  white-space:nowrap;overflow:hidden;text-overflow:ellipsis; 
}

.list .flex_col .btndred {
  width: 145rpx;
  height: 54rpx;
  padding: 0;
  margin: 0;
  line-height: 54rpx;
  text-align: center;
}

.list .icon{ font-size: 30rpx; color: #ff2742}

.addressedit{ align-items: center}
/** 无数据情况 **/

.nodata {
  padding: 150rpx 0;
  text-align: center;
}

.nodata .icon {
  font-size: 200rpx;
  display: block;
  padding-bottom: 20rpx;
  color: #ccd1dd;
}

.nodata-text {
  width: 515rpx;
  display: inline-block;
  margin: auto;
  text-align: center;
  font-weight: normal;
}
/** 没有更多数据 **/
.noMore{
  text-align: center;
  margin: 30rpx 0;
}
.noMore text{
  display: inline-block;
  line-height: 50rpx;
  height: 50rpx;
  color: #495056;
  position: relative;
}
.noMore text::before{
  left: -130rpx;
}
.noMore text::after{
  right: -130rpx;
}
.noMore text::after,.noMore text::before{
  content: '';
  position: absolute;
  width: 100rpx;
  border-bottom: 1px solid #495056;
  top: 25rpx;
}
/*底部按钮  */
.bottom_btn{ 
  position: fixed; 
  bottom: 0; 
  z-index: 99; 
  width: 100%; 
  height: 100rpx; 
  line-height: 100rpx; 
  text-align: center; 
  box-shadow: 0 -3rpx 6rpx rgba(7, 0, 2, .02);
 background: #fff; 
}