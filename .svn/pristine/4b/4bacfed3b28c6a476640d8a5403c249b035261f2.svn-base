@import "/res/common.wxss";
@import "/res/ifont/iconfont.wxss";

.container {
  padding-top: 20rpx;
}

/*商品评价 */

.list {
  background: #fff;
  padding: 0 30rpx 30rpx;
  border-bottom: 1rpx solid #d9e3ea;
  margin-bottom: 20rpx;
}
.list:last-child{
  margin-bottom: 40rpx;
}
.list .goods {
  padding: 20rpx 0;
}

.list .commentimg {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  overflow: hidden;
  border: 1rpx solid #d7e2ea;
}

.list image {
  width: 100%;
  height: 100%;
}

.list .goods .flex_col .font_28_b {
  width: 500rpx;
  height: 88rpx;
  line-height: 45rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

/*评论内容部分  */

.comment_box {
  background: #f5f8fa;
  padding: 20rpx;
}

.comment_box textarea {
  width: 100%;
  height: 120rpx;
  line-height: 35rpx;
  margin-bottom: 20rpx;
}

.comment_box .commentLimg {
  flex-wrap: wrap;
}

.comment_box .commentLimg .addimg {
  width: 126rpx;
  height: 126rpx;
  border: 1rpx solid #ddd;
  align-items: center;
  padding-top: 20rpx;
  margin-left: 10rpx;
  background: #fff;
}

.comment_box .commentLimg .addimg .iconfont {
  font-size: 45rpx;
  color: #babcbd;
}

.comment_box .commentLimg .comimg {
  width: 126rpx;
  height: 126rpx;
  margin-left: 10rpx;
}

.comimg image {
  width: 100%;
  height: 100%;
}


/*确认评价按钮  */
.btnrtred{ margin:20rpx;}